<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    app:cardElevation="@dimen/item_card_elevation"
    app:cardCornerRadius="@dimen/item_card_corner_radius"
    android:layout_margin="@dimen/item_card_margin"
    style="@style/Widget.Material3.CardView.Elevated"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivPlaylistCover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_card_image_view_height"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_round_queue_music_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/default_content_padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/large_text_size"
                tools:text="Songs on Innocence" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>